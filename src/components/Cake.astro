---
import { Image } from '@astrojs/image/components';

const { cake } = Astro.props;
---

<div class="cake col-span-1 lift rounded-lg overflow-hidden flex flex-col justify-between relative">
    <div class="w-full load overflow-hidden ">
        <a href={cake.url} class="">
            <Image 
            class="lift m-auto"
            src={cake.frontmatter.img} 
            alt={cake.frontmatter.alt}  
            aspectRatio={3/2}
            loading="lazy"
            format="avif"
            height={223}
            fit="cover"
            position="center"
            />
        </a>
    </div>
    <div class= "p-2">
        <p>{cake.frontmatter.name}</p>
        <p>{cake.frontmatter.description}</p>
        <div class="flex justify-between items-center mt-2">
            <p class="text-lg font font-semibold">{cake.frontmatter.price[0]}</p>
            <a href={cake.url} class="rosyy text-white"><button>Buy Cake</button></a>
        </div>
    </div>
</div>


