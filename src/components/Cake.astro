---
const { cake } = Astro.props;
---

<div class="cake col-span-1 lift rounded-lg overflow-hidden flex flex-col justify-between relative">
    <a href={cake.url}><img src={cake.frontmatter.img} alt="" class="w-full"></a>
    <div class= "p-2">
        <p>{cake.frontmatter.name}</p>
        <p>{cake.frontmatter.description}</p>
        <div class="flex justify-between items-center">
            <p class="text-lg font font-semibold">{cake.frontmatter.priceSM}</p>
            <a href={cake.url} class="rosyy text-white"><button>More</button></a>
        </div>
    </div>
</div>


