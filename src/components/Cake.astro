---
const { cake } = Astro.props;
---

<div class="cake col-span-1 lift rounded-lg overflow-hidden flex flex-col justify-between relative">
    <div class="h-56 load overflow-hidden ">
        <a href={cake.url} class=""><img src={cake.frontmatter.img} alt="" class="h-full w-full object-cover object-center"></a>
    </div>
    <div class= "p-2">
        <p>{cake.frontmatter.name}</p>
        <p>{cake.frontmatter.description}</p>
        <div class="flex justify-between items-center">
            <p class="text-lg font font-semibold">{cake.frontmatter.price[0]}</p>
            <a href={cake.url} class="rosyy text-white"><button>More</button></a>
        </div>
    </div>
</div>


