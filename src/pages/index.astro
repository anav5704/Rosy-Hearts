---
import Layout from '../layouts/Layout.astro';
import Cake from '../components/Cake.astro';

const allCakes = await Astro.glob('../pages/cakes/*.md'); 
---

<Layout title="Rosy Hearts">
<h1 class="my-5 text-3xl text-center">Rosy Heart <span class="rosy font-bold">Classics</span></h1>
<div class="grid grid-cols-3 w-4/5 m-auto gap-5">
    {allCakes.map((cake) => <Cake {cake}/>)}
</Layout>
