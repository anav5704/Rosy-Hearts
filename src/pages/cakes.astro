---
import Layout from '../layouts/Layout.astro';
import Cake from '../components/Cake.astro';

const classics = await Astro.glob('../pages/cakes/*.md'); 
const seasonals = await Astro.glob('../pages/seasonal/*.md'); 
---

<Layout title="Rosy Hearts">
<h1 class="my-5 text-3xl text-center">Our <span class="rosy"> Valentines </span>Cakes</h1>
<div class="cakes grid grid-cols-3 w-4/5 m-auto gap-5">
{seasonals.map((cake) => <Cake {cake}/>)}
</div>

<h1 class="my-5 text-3xl text-center">Rosy Hearts <span class="rosy"> Classics </span></h1>
<div class="cakes grid grid-cols-3 w-4/5 m-auto gap-5">
{classics.map((cake) => <Cake {cake}/>)}
</div>
</Layout>

